{% extends "admin/base.html.twig" %}

{% block title %}Settings - {{ category.settingCategoryName }}{% endblock %}

{% block body %}
    <div>
        {% for category in settingCategories %}
            <a class="badge badge-primary" href="{{ path('admin_setting_list', {'category' : category.settingCategoryName}) }}">{{ category.settingCategoryName }}</a>
        {% endfor %}
    </div>

    <div>
        <h1 class="float-left">Settings - {{ category.settingCategoryName }}</h1>
        <a class="btn btn-primary float-right" href="{{ path('admin_setting_new') }}" role="button">Add Setting</a>
    </div>

    <table class="table">
        <thead class="thead-light">
        <tr>
            <th>{{ knp_pagination_sortable(settings, '#', 'settings.setting_id') }}</th>
            <th>{{ knp_pagination_sortable(settings, 'Key', 'settings.setting_key') }}</th>
            <th>Category</th>
            <th>Description</th>
            <th>Value</th>
        </tr>
        </thead>
        <tbody>
        {% for setting in settings %}
            <tr>
                <td>{{ setting.settingId }}</td>
                <td><a class="badge badge-info" href="{{ path('admin_setting_edit', {'key' : setting.settingKey}) }}">{{ setting.settingKey }}</a></td>
                <td>{{ setting.settingCategory.settingCategoryName }}</td>
                <td>{{ setting.settingValue }}</td>
                <td>{{ setting.settingValue }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(settings) }}
    </div>
{% endblock %}